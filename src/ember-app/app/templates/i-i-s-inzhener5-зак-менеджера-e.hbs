<h3 class="ui header">{{t "forms.i-i-s-inzhener5-зак-менеджера-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.операционная_система
      class=(if (v-get validationModel "операционная_система" "isInvalid") "error")
      label=(t "forms.i-i-s-inzhener5-зак-менеджера-e.операционная_система-caption")
      data-test-i-i-s-inzhener5-зак-менеджера-e-операционная_система=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "операционная_система" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер_заявки
      class=(if (v-get validationModel "номер_заявки" "isInvalid") "error")
      label=(t "forms.i-i-s-inzhener5-зак-менеджера-e.номер_заявки-caption")
      data-test-i-i-s-inzhener5-зак-менеджера-e-номер_заявки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер_заявки" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      label=(t "forms.i-i-s-inzhener5-зак-менеджера-e.дата-caption")
      data-test-i-i-s-inzhener5-зак-менеджера-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.описание_проблемы
      class=(if (v-get validationModel "описание_проблемы" "isInvalid") "error")
      label=(t "forms.i-i-s-inzhener5-зак-менеджера-e.описание_проблемы-caption")
      data-test-i-i-s-inzhener5-зак-менеджера-e-описание_проблемы=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "описание_проблемы" "message")}}
  </div>
</form>
